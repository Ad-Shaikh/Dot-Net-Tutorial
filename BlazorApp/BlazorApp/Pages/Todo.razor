@page "/todo"

<h3>Todo (@Todos.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach (var todo in Todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Todo" />
            <input @bind="todo.DueDate" />
        </li>
    }
</ul>  

<input @bind="NewTodo" @bind:event="oninput" placeholder="Something todo" />
<input @bind="DueDate" @bind:format="yyyy-MM-dd" placeholder="Due Date" />
<button @onclick="Save">Add todo</button>

@code {
    private List<TodoItem> Todos = new();
    private string? NewTodo =  string.Empty;
    private DateTime? DueDate = null;

    private void Save()
    {
        if (string.IsNullOrEmpty(NewTodo)) return;

        Todos.Add(new TodoItem 
            { 
                Todo = NewTodo 
            });
        NewTodo = string.Empty;

        {
            
        }
    }
}
